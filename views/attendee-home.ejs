<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Attendee Home</title>
    <link rel="stylesheet" href="/main.css" />
</head>
<body>
    <main class="container">
        <h1>Attendee Home Page</h1>
        <p class="muted"><strong><%= settings.site_name %></strong> - <%= settings.site_description %></p>
        <div class="nav">
            <a class="button" href="/">Main Home</a>
            <a class="button" href="/organiser">Organiser Home</a>
        </div>

        <section>
            <h2>Upcoming</h2>
            <% if (events.length === 0) { %>
                <p class="muted">No events available.</p>
            <% } %>
            <div class="list">
                <% events.forEach(function (event) { %>
                    <a class="list-item" href="/attendee/events/<%= event.event_id %>">
                        <div>
                            <h3><%= event.title %></h3>
                            <p class="muted">Date: <%= event.event_date %></p>
                        </div>
                    </a>
                <% }); %>
            </div>
        </section>
    </main>
</body>
</html>
<!-- END MY CODE (attendee home page) -->
